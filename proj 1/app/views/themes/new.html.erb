<div class="row">
<div class="col-lg-offset-2 col-lg-8 col-lg-offset-2 " id="form1">
<%= form_for @theme do |f| %>

  <%= f.label :title, 'Title'%>
  <%= f.text_field :title %>
  <br>
  <%= f.label :catagory, "Category" %>
  <%= f.select(:category) do %>
        <% ['Technology','General'].each do |category| %>
          <%= content_tag(:option, category, value: category) %>
        <% end %>
      <% end %>
  <br>
  <%= f.label :problem %><br>
  <%= f.text_area :problem %><br>

  <%= f.submit 'Post', class: "col-lg-offset-2 col-lg-8 col-lg-offset-2 " %>
<% end %>  
</div>
</div>
